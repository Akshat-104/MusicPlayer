generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  password    String
  Playlists   Playlists[]     //relation
  Favourite   Favourite[]
  FavouriteTracks  FavouriteTrack[]    //relation
  createdAt   DateTime    @default(now())
}

model Playlists {
  id          Int         @id @default(autoincrement())
  name        String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId] , references:[id])
  userId      Int
  tracks      PlaylistTrack[]
}

model Track {
  id          Int         @id @default(autoincrement())
  title       String
  artist      String
  duration    Int
  url         String
  coverUrl    String?
  playlists   PlaylistTrack[]
  Favourite   FavouriteTrack[]
}

model PlaylistTrack {
  id          Int       @id @default(autoincrement())
  playlist    Playlists  @relation(fields:[playlistId] , references:[id])
  playlistId  Int
  track       Track     @relation(fields:[trackId] , references:[id])
  trackId     Int
  order       Int
}

model Favourite {
  id          Int         @id @default(autoincrement())
  name        String      @default("Favourite")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId] , references:[id])
  userId      Int
  tracks      FavouriteTrack[]
}

model FavouriteTrack {
  id          Int       @id @default(autoincrement())
  Favourite   Favourite?   @relation(fields:[Favouriteid] , references:[id])
  Favouriteid Int
  User        User?      @relation(fields:[userid] , references:[id])
  userid      Int
  track       Track?     @relation(fields:[trackId] , references:[id])
  trackId     Int        @unique
  order       Int
}